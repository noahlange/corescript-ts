{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "noImplicitUseStrict": false,
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": false,
        "allowJs": true,
        "strict": false,
        "suppressExcessPropertyErrors": false,
        "suppressImplicitAnyIndexErrors": false,
        "rootDir": "src",
        "outDir": "lib",
        "lib": [
            "dom",
            "es6"
        ],
        "baseUrl": "src",
        "paths": {
            "rpg_core": ["rpg_core/index"],
            "rpg_managers": ["rpg_managers/index"],
            "rpg_windows": ["rpg_windows/index"],
            "rpg_scenes": ["rpg_scenes/index"],
            "rpg_sprites": ["rpg_sprites/index"],
            "rpg_objects": ["rpg_objects/index"]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.js"
    ]
}