{
    "compilerOptions": {
        "module": "es2015",
        "target": "es5",
        "noImplicitUseStrict": false,
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": false,
        "sourceMap": false,
        "allowJs": true,
        "strict": false,
        "outDir": "out",

        "suppressExcessPropertyErrors": false,
        "suppressImplicitAnyIndexErrors": false,

        "lib": [
            "dom", "es6"
        ]
    },

    "include": [
        "ts/**/*.ts",
        "ts/**/*.js"
    ],
    "exclude": [
        "node_modules",
        "tests",
        "dist"
    ]
}